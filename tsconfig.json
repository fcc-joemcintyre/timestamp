{
  "compilerOptions": {
    "noEmit": true,
    "target": "es2020",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "lib/main.js",
    "test/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
